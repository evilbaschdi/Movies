<controls:MetroWindow x:Class="Movie.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro" Icon="b.ico"
                      Title="Movies" Width="800" Height="600" Style="{DynamicResource VSWindowStyleKey}">
    <Grid>

        <DataGrid Name="MovieGrid" IsReadOnly="True" CanUserAddRows="False" SelectionUnit="FullRow" ColumnWidth="*"
                  AutoGeneratingColumn="OnAutoGeneratingColumn"
                  GridLinesVisibility="Horizontal"
                  SelectionChanged="MovieGrid_OnSelectionChanged"
                  CanUserDeleteRows="False" Margin="10,90,10,10">
            <!--<DataGrid.ContextMenu>
                <ContextMenu Name="StoryMenu" StaysOpen="True">

                    <MenuItem Header="Edit" Click="SelectMovieClick" />
                </ContextMenu>
            </DataGrid.ContextMenu>-->
        </DataGrid>
        <Button Name="New" Click="btnNew_Click" Content="New" Width="75" Height="20" Margin="627,33,0,0"
                HorizontalAlignment="Left" VerticalAlignment="Top" />
        <Button Name="Save" Click="btnSave_Click" Content="Save" Width="75" Height="20" Margin="627,10,0,0"
                HorizontalAlignment="Left" VerticalAlignment="Top" />
        <Button Name="Cancel" Click="btnCancel_Click" Content="Cancel" Width="75" Height="20"
                Margin="707,33,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <Button Name="Delete" Click="btnDelete_Click" Content="Delete" Width="75" Height="20"
                Margin="707,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <TextBox Name="txtName" Margin="90,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="532" />
        <TextBox Name="txtYear" Margin="90,33,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="532" />
        <TextBox Name="txtFormat" Margin="90,56,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="532" />
        <Label Content="Title" HorizontalAlignment="Left" Margin="10,2,0,0" VerticalAlignment="Top"
               Foreground="{StaticResource Foreground}" />
        <Label Content="Year" HorizontalAlignment="Left" Margin="10,25,0,0" VerticalAlignment="Top"
               Foreground="{StaticResource Foreground}" />
        <Label Content="Format" HorizontalAlignment="Left" Margin="10,48,0,0" VerticalAlignment="Top"
               Foreground="{StaticResource Foreground}" />
        <Button Content="Export to Excel" Name="btnExport" Click="btnExport_OnClick" HorizontalAlignment="Left"
                IsEnabled="False"
                Margin="627,58,0,0" VerticalAlignment="Top" Width="155" />
    </Grid>
</controls:MetroWindow>